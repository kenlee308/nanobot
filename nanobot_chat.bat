@echo off
set PYTHONUTF8=1
powershell -NoProfile -Command "$config = Get-Content \"$HOME\.nanobot\config.json\" | ConvertFrom-Json; $dm = if ($config.agents.defaults.draftMode) { 'ON' } else { 'OFF' }; $rag = if ($config.agents.defaults.disableTools) { 'DISABLED' } else { 'ENABLED' }; $hjm = if ($config.agents.defaults.useNativeTools -eq $false) { 'ON' } else { 'OFF' }; $pp = if ($config.agents.defaults.promptProfile -eq 'Minimal') { 'MINIMAL' } else { 'FULL' }; $acc = if ($config.agents.defaults.temperature -le 0.1) { 'PRECISE' } elseif ($config.agents.defaults.temperature -ge 1.0) { 'CREATIVE' } else { 'BALANCED' }; Write-Host '--- Starting Nanobot ---' -ForegroundColor Cyan; Write-Host ('Active Model:   ' + $config.agents.defaults.model) -ForegroundColor Yellow; Write-Host ('Context Length: ' + $config.agents.defaults.maxTokens) -ForegroundColor Yellow; Write-Host ('Prompt Profile: ' + $pp) -ForegroundColor Yellow; Write-Host ('Accuracy:       ' + $acc) -ForegroundColor Yellow; Write-Host ('Draft Mode:     ' + $dm) -ForegroundColor Yellow; Write-Host ('RAG & Tools:    ' + $rag) -ForegroundColor Yellow; Write-Host ('Hide JSON Mode: ' + $hjm) -ForegroundColor Yellow; Write-Host '-------------------------' -ForegroundColor Cyan"
"%~dp0.venv\Scripts\python.exe" -m nanobot agent
